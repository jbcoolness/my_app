<h1>Create content</h1>
<%= form_for @blog, url: blog_index_path, method: :post do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>  
    </div>
    <div>
        <%= f.label :content %>
        <%= f.text_area :content %>
    </div>
    <div>
        <%= f.submit ("Create")%>
    </div>

<% end %>